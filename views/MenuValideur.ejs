    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Valideur</title>
</head>


<style>
    @charset "utf-8";
    /* CSS Document */
    
    body {
        margin: 0px;
        padding: 0px;
        background-color: white;
        background: url(../img/back4.png);
        font-family: calibri;
    }
    
    a {
        text-decoration: none;
    }
    
    .services {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        align-items: center;
    }
    
    .s-heading {
        text-align: center;
    }
    
    .s-heading h1 {
        color: #576975;
        font-size: 3rem;
        font-weight: 400;
        letter-spacing: 1px;
        margin: 0px;
    }
    
    .s-heading p {
        color: rgba(87, 105, 117, 0.60);
        font-size: 1rem;
        margin: 5px;
        text-align: center;
    }
    
    .s-box-container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .s-box {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        width: 300px;
        padding: 20px 25px;
        height: 300px;
        box-sizing: border-box;
        margin: 30px;
        position: relative;
    }
    
    .s-box img {
        height: 75px;
    }
    
    .s-box h1 {
        color: #576975;
        letter-spacing: 1px;
        font-size: 1.5rem;
        margin-bottom: 8px;
    }
    
    .s-box p {
        color: rgba(87, 105, 117, 0.90);
        text-align: center;
    }
    
    .s-btn {
        width: 140px;
        height: 40px;
        border-radius: 20px;
        border: 1px solid rgba(74, 144, 226, 0.50);
        display: flex;
        justify-content: center;
        align-items: center;
        color: #576975;
        margin-top: 10px;
    }
    
    .bar {
        width: 100px;
        height: 6px;
        position: absolute;
        left: 50%;
        top: 0%;
        transform: translateX(-50%);
        background-color: #D62839;
        border-radius: 0px 0px 10px 10px;
        display: none;
        animation: bar 0.5s;
    }
    
    .s-box:hover {
        box-shadow: 2px 2px 30px rgba(0, 0, 0, 0.08);
        transition: all ease 0.3s;
    }
    
    .s-btn:hover {
        background-color: #4a90e2;
        border: 1px solid #4a90e2;
        color: #FFFFFF;
        transition: all ease 0.3s;
    }
    
    .s-box:hover .bar {
        display: block;
    }
    
    .menu-bar2 img {
        width: 45px;
        height: 30px;
        float: left;
        margin-top: 15px;
        margin-left: 20px;
    }
    
    .menu-bar2 {
        height: 70px;
        width: 100%;
    }
    
    .menu-bar2 ul {
        float: right;
        margin-right: 10px;
    }
    
    .menu-bar2 ul li {
        display: inline-block;
        line-height: 70px;
        margin: 0 5px;
    }
    
    .menu-bar2 ul li a {
        color: #175676;
        font-size: 15px;
        text-decoration: none;
        padding: 7px 13px;
        border-radius: 1px;
    }
    
    .menu-bar2 ul li a:hover {
        background: #4BA3C3;
        border-radius: 6px;
        text-align: center;
        transition: .5s;
    }
    
    .menu-bar2 ul li form button {
        text-decoration: none;
        background: transparent;
        color: #175676;
        border: transparent;
        padding: 1px 1px;
    }
    
    .menu-bar2 ul li form button:hover {
        color: #D62839;
        text-align: center;
        transition: .5s;
        border-radius: 6px;
    }
    
    @keyframes bar {
        0% {
            width: 0px;
        }
        100% {
            width: 100px;
        }
    }
    
    @media(max-width:1050px) {
        .s-box-container {
            flex-wrap: wrap;
        }
        .services {
            height: auto;
        }
        .s-heading {
            margin: 15px;
        }
        .s-box {
            flex-grow: 1;
        }
    }
</style>



<header>
